{
  "name": "salud-helisa",
  "version": "1.0.0",
  "description": "Proyecto entidad de Salud",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/index.js",
    "dev": "ts-node-dev --respawn -- src/index.ts",
    "test": "jest",
    "coverage": "jest --coverage",
    "typeorm": "ts-node -r ts-node/register ./node_modules/.bin/typeorm --config ./src/ormconfig.ts",
    "migration:create": "npm run typeorm migration:create -- -n",
    "migration:generate": "npm run typeorm migration:generate -- -n",
    "migration:run": "npm run typeorm migration:run",
    "migration:revert": "npm run typeorm migration:revert",
    "migration:show": "npm run typeorm migration:show",
    "schema:sync": "npm run typeorm schema:sync",
    "schema:log": "npm run typeorm schema:log",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --fix --ext .js,.ts",
    "format": "prettier --write \"src/*.ts\" \"src/modules/**/test/*.test.ts\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/farango0728/salud-helisa.git"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@hapi/boom": "^9.1.0",
    "@hapi/hapi": "^19.0.0",
    "@hapi/inert": "^6.0.3",
    "@hapi/joi": "^17.1.1",
    "@hapi/vision": "^6.0.1",
    "dotenv": "^8.2.0",
    "glob": "^7.1.6",
    "mysql": "^2.18.1",
    "request": "^2.88.2",
    "typeorm": "^0.2.29"
  },
  "devDependencies": {
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.19",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-jest": "^24.1.3",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "jest-tap-reporter": "^1.9.0",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4",
    "ts-node-dev": "^1.1.1",
    "typescript": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format && npm run lint:fix && npm test",
      "pre-push": "npm run format && npm run lint:fix && npm test"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "modulePathIgnorePatterns": [
      "npm-cache",
      ".npm"
    ],
    "reporters": [
      "jest-tap-reporter"
    ]
  },
  "directories": {
    "test": "test"
  }
}
